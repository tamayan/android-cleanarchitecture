<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="newsDetail"
                type="com.example.cleanarchitecture.usecase.news.detail.GetNewsDetailResponse"/>

    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_small">

        <TextView
                android:id="@+id/id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_dark"
                android:text="@{String.valueOf(newsDetail.id)}"
                android:textSize="@dimen/font_normal"/>

        <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_small"
                android:layout_toEndOf="@id/id_text"
                android:textColor="@color/gray_dark"
                android:text="@{newsDetail.title}"
                android:textSize="@dimen/font_normal"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_small"
                android:layout_toEndOf="@id/title_text"
                android:textColor="@color/gray_dark"
                android:text="@{newsDetail.text}"
                android:textSize="@dimen/font_normal"/>

    </RelativeLayout>

</layout>