<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="news"
                type="com.example.cleanarchitecture.feature.ui.newslist.NewsViewEntity"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_news_background"
            android:padding="@dimen/space_small">

        <TextView
                android:id="@+id/idTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_dark"
                android:text="@{String.valueOf(news.id)}"
                android:textSize="@dimen/font_normal"/>

        <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_small"
                android:layout_toEndOf="@+id/idTextView"
                android:textColor="@color/gray_dark"
                android:text="@{String.valueOf(news.title)}"
                android:textSize="@dimen/font_normal"/>

    </RelativeLayout>

</layout>